@model ClashZone.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <h1>Logowanie</h1>
</header>
<hr />
<div class="form-container">
    <div class="col-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-cc">Zaloguj</button>
            </div>
            <div class="form-group">
                <a asp-action="ForgotPassword">Zapomniałeś hasła?</a>
            </div>
        </form>
    </div>
</div>

<div class="registration-prompt">
    Nie masz konta? <a asp-action="Register">Przejdź do rejestracji</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}