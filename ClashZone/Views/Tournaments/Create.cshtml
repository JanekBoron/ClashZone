@model DataAccess.Models.Tournament

@{
    // Ustaw tytuł strony dla górnego paska przeglądarki oraz widoku.
    ViewData["Title"] = "Utwórz turniej";
}



<div class="container mt-4" style="background-color:#111; padding:20px; border-radius:10px; color:#f8f9fa;">
    <h2 style="color:#FF2B3E;">Utwórz turniej</h2>
<form asp-action="CreateTournament" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nazwa</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="GameTitle" class="form-label">Tytuł Gry</label>
        <!-- Restrict game title to Counter Strike 2 only -->
        <select asp-for="GameTitle" class="form-select">
            <option value="Counter Strike 2">Counter Strike 2</option>
        </select>
        <span asp-validation-for="GameTitle" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Data startowa</label>
        <!-- `datetime-local` umożliwia wybór daty i godziny w jednym polu -->
        <input asp-for="StartDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaxParticipants" class="form-label">Maksimum uczestników</label>
        <input asp-for="MaxParticipants" type="number" min="1" class="form-control" />
        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Format" class="form-label">Format drużyn</label>
        <select asp-for="Format" class="form-select">
            <option value="1v1">1v1</option>
            <option value="2v2">2v2</option>
            <option value="5v5">5v5</option>
        </select>
        <span asp-validation-for="Format" class="text-danger"></span>
    </div>
    <!-- Prize selection for first, second and third places.  Each block allows choosing between
         a text description and a ClashCoins amount.  The values will be combined into the
         tournament.Prize property separated by a pipe symbol. -->
     <div class="mb-2"><strong style="color:#FF2B3E;">Nagrody</strong></div>

        <div class="mb-3 p-3" style="background-color:#0A0A0A; border:1px solid #333; border-radius:8px;">
            <div class="mb-1"><strong>1. miejsce</strong></div>
        <label class="form-label">Rodzaj nagrody</label>
        <select name="prizeOption1" class="form-select">
            <option value="text">Opis</option>
            <option value="coins">ClashCoins</option>
        </select>
        <div class="mt-2">
            <label class="form-label">Opis nagrody</label>
            <input name="prizeDescription1" class="form-control" />
        </div>
        <div class="mt-2">
            <label class="form-label">Ilość ClashCoins</label>
            <input name="prizeCoins1" type="number" min="0" class="form-control" />
        </div>
    </div>
        <div class="mb-3 p-3" style="background-color:#0A0A0A; border:1px solid #333; border-radius:8px;">
            <div class="mb-1"><strong>2. miejsce</strong></div>
        <label class="form-label">Rodzaj nagrody</label>
        <select name="prizeOption2" class="form-select">
            <option value="text">Opis</option>
            <option value="coins">ClashCoins</option>
        </select>
        <div class="mt-2">
            <label class="form-label">Opis nagrody</label>
            <input name="prizeDescription2" class="form-control" />
        </div>
        <div class="mt-2">
            <label class="form-label">Ilość ClashCoins</label>
            <input name="prizeCoins2" type="number" min="0" class="form-control" />
        </div>
    </div>
        <div class="mb-3 p-3" style="background-color:#0A0A0A; border:1px solid #333; border-radius:8px;">
            <div class="mb-1"><strong>3. miejsce</strong></div>
        <label class="form-label">Rodzaj nagrody</label>
        <select name="prizeOption3" class="form-select">
            <option value="text">Opis</option>
            <option value="coins">ClashCoins</option>
        </select>
        <div class="mt-2">
            <label class="form-label">Opis nagrody</label>
            <input name="prizeDescription3" class="form-control" />
        </div>
        <div class="mt-2">
            <label class="form-label">Ilość ClashCoins</label>
            <input name="prizeCoins3" type="number" min="0" class="form-control" />
        </div>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsPublic" class="form-check-input" />
        <label asp-for="IsPublic" class="form-check-label">
            Publiczny (widoczny dla wszystkich)
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Opublikuj</button>
</form>

@section Scripts {
    @{
        // Załaduj częściowe widoki z walidacją JavaScript (jQuery validation)
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>