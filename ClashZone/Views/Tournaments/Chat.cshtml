@model ClashZone.ViewModels.ChatViewModel

@{
    ViewData["Title"] = $"Czat – {Model.Tournament.Name}";
}
<div class="container mt-4" style="background-color:#111; padding:20px; border-radius:10px; color:#f8f9fa;">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">Czat – @Model.Tournament.Name</h2>
            <small class="text-muted">Turniej: @Model.Tournament.GameTitle</small>
        </div>
    </div>

<hr style="border-color:#444;" />
@await Html.PartialAsync("_TournamentNav", (Model.Tournament.Id, "Chat"))

<!-- Global chat section -->
<div class="chat-section my-4">
    <h2>All Chat</h2>
    @if (Model.AllMessages.Any())
    {
        foreach (var msg in Model.AllMessages)
        {
            <div class="chat-message">
                <strong>@Model.UserNames[msg.UserId]</strong>
                (@msg.SentAt.ToLocalTime().ToString("dd MMM HH:mm"))<br />
                @msg.Message
            </div>
        }
    }
    else
    {
        <p>Brak wiadomości.</p>
    }
    @using (Html.BeginForm("PostMessage", "Tournaments", new { id = Model.Tournament.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="toTeam" value="false" />
        <div class="input-group mt-2">
            <input type="text" name="message" class="form-control" placeholder="Napisz wiadomość..." />
            <button type="submit" class="btn btn-danger">Wyślij</button>
        </div>
    }
</div>

<!-- Team chat section -->
<div class="chat-section my-4">
    <h2>Czat drużynowy</h2>
    @if (Model.HasTeam)
    {
        if (Model.TeamMessages.Any())
        {
            foreach (var msg in Model.TeamMessages)
            {
                <div class="chat-message">
                    <strong>@Model.UserNames[msg.UserId]</strong>
                    (@msg.SentAt.ToLocalTime().ToString("dd MMM HH:mm"))<br />
                    @msg.Message
                </div>
            }
        }
        else
        {
            <p>Brak wiadomości w czacie drużynowym.</p>
        }
        @using (Html.BeginForm("PostMessage", "Tournaments", new { id = Model.Tournament.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="toTeam" value="true" />
            <div class="input-group mt-2">
                <input type="text" name="message" class="form-control" placeholder="Napisz wiadomość do drużyny..." />
                <button type="submit" class="btn btn-danger">Wyślij</button>
            </div>
        }
    }
    else
    {
        <p>Musisz dołączyć do drużyny, aby korzystać z czatu drużynowego.</p>
    }
</div>

<!-- Problem report chat section -->
<div class="chat-section my-4">
    <h2>Zgłoszenia problemów</h2>
    @if (Model.HasTeam || User.IsInRole("Admin"))
    {
        if (Model.ReportMessages.Any())
        {
            foreach (var msg in Model.ReportMessages)
            {
                <div class="chat-message">
                    <strong>@Model.UserNames[msg.UserId]</strong>
                    (@msg.SentAt.ToLocalTime().ToString("dd MMM HH:mm"))<br />
                    @msg.Message
                </div>
            }
        }
        else
        {
            <p>Brak wiadomości w czacie zgłoszeń.</p>
        }
        @using (Html.BeginForm("PostReportMessage", "Tournaments", new { id = Model.Tournament.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="teamId" value="@Model.UserTeamId" />
            <div class="input-group mt-2">
                <input type="text" name="message" class="form-control" placeholder="Opisz problem..." />
                <button type="submit" class="btn btn-danger">Wyślij</button>
            </div>
        }
    }
    else
    {
        <p>Musisz dołączyć do drużyny, aby zgłosić problem.</p>
    }
</div>
</div>