@model ClashZone.ViewModels.ChatViewModel

@{
    ViewData["Title"] = $"Czat – {Model.Tournament.Name}";
}

<div class="container mt-4" style="background-color:#111; padding:20px; border-radius:10px; color:#f8f9fa;">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">Czat – @Model.Tournament.Name</h2>
            <small class="text-muted">Turniej: @Model.Tournament.GameTitle</small>
        </div>
    </div>
    <hr style="border-color:#444;" />
    <!-- Navigation bar -->
    <ul class="nav nav-tabs mb-3" id="tournamentTabs" style="border-bottom: 1px solid #FF2B3E;">
        <li class="nav-item">
            <a class="nav-link" asp-action="Details" asp-route-id="@Model.Tournament.Id" style="color:#FF2B3E; border:none;">Przegląd</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#" style="color:#FF2B3E; border:none;">Czat</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" style="color:#6c757d;">Drabinka</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" style="color:#6c757d;">Uczestnicy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" style="color:#6c757d;">Mecze</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" style="color:#6c757d;">Reguły</a>
        </li>
    </ul>

    <!-- All Chat section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h4>All Chat</h4>
            <div class="border p-3 mb-3" style="background-color:#1a1a1a; border-color:#444; border-radius:6px; max-height:300px; overflow-y:auto;">
                @if (Model.AllMessages.Any())
                {
                    @foreach (var msg in Model.AllMessages)
                    {
                        <div class="mb-2">
                            <strong style="color:#FF2B3E;">@Model.UserNames[msg.UserId]</strong>
                            <small class="text-muted">(@msg.SentAt.ToLocalTime().ToString("dd MMM HH:mm"))</small><br />
                            <span>@msg.Message</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Brak wiadomości.</p>
                }
            </div>
            <form asp-action="PostMessage" method="post" class="d-flex">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Tournament.Id" />
                <input type="hidden" name="toTeam" value="false" />
                <input type="text" name="message" class="form-control me-2" placeholder="Napisz wiadomość..." style="background-color:#222; border-color:#444; color:#fff;" />
                <button type="submit" class="btn" style="background-color:#FF2B3E; color:#fff;">Wyślij</button>
            </form>
        </div>
    </div>

    <!-- Team Chat section -->
    <div class="row">
        <div class="col-md-12">
            <h4>Czat drużynowy</h4>
            <div class="border p-3 mb-3" style="background-color:#1a1a1a; border-color:#444; border-radius:6px; max-height:300px; overflow-y:auto;">
                @if (Model.HasTeam)
                {
                    @if (Model.TeamMessages.Any())
                    {
                        @foreach (var msg in Model.TeamMessages)
                        {
                            <div class="mb-2">
                                <strong style="color:#FF2B3E;">@Model.UserNames[msg.UserId]</strong>
                                <small class="text-muted">(@msg.SentAt.ToLocalTime().ToString("dd MMM HH:mm"))</small><br />
                                <span>@msg.Message</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Brak wiadomości w czacie drużynowym.</p>
                    }
                }
                else
                {
                    <p class="text-muted">Musisz dołączyć do drużyny, aby korzystać z czatu drużynowego.</p>
                }
            </div>
            @if (Model.HasTeam)
            {
                <form asp-action="PostMessage" method="post" class="d-flex">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Tournament.Id" />
                    <input type="hidden" name="toTeam" value="true" />
                    <input type="text" name="message" class="form-control me-2" placeholder="Napisz wiadomość do drużyny..." style="background-color:#222; border-color:#444; color:#fff;" />
                    <button type="submit" class="btn" style="background-color:#FF2B3E; color:#fff;">Wyślij</button>
                </form>
            }
        </div>
    </div>
</div>